<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:context="com.example.avinashucheniya.bustracking.MapsActivity"
        android:layout_below="@+id/B_arrival"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IITG BUS SERVICE"
            android:textColor="@color/white"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/B_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near Bus Stops"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:background="@layout/border"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/B_buses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="90dp"
        android:background="@layout/border"
        android:text="Nearest Buses"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/B_login"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="90dp"
        android:background="@layout/border"
        android:text="Login"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/B_arrival"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="140dp"
        android:background="@layout/border"
        android:text="Arrival Time"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/B_suggested"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="140dp"
        android:background="@layout/border"
        android:text="Suggested BusStop"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/B_timetable"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="140dp"
        android:background="@layout/border"
        android:text="Time Table"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>